{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },

    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,

    "esModuleInterop": true,

    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
